---
import Ghost from "@/icons/ghost.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
	<main
		class="mx-auto my-5 flex h-[50vh] flex-col items-center justify-center text-center max-sm:px-4 sm:max-w-sm md:max-w-xl lg:max-w-3xl"
	>
		<Ghost
			class="mx-auto my-2 animate-bounce hover:animate-pulse"
			height={64}
			width={64}
		/>
		<h1 class="text-3xl font-semibold max-sm:text-xl">
			404 - Page Not Found
		</h1>
		<p class="font-normal max-sm:text-sm">
			Sorry, the page you are looking for does not exist.
		</p>
	</main>
</Layout>
