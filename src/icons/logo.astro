---
interface Props {
	class?: string;
	width?: number;
	height?: number;
}

const { class: className = "", width = 24, height = 24 } = Astro.props;
---

<svg
	width={width}
	height={height}
	viewBox="0 0 24 24"
	fill="none"
	xmlns="http://www.w3.org/2000/svg"
	class={className}
>
	<circle cx="12" cy="12" r="12" fill="url(#paint0_linear_1_3)"></circle>
	<defs>
		<linearGradient
			id="paint0_linear_1_3"
			x1="12"
			y1="0"
			x2="12"
			y2="24"
			gradientUnits="userSpaceOnUse"
		>
			<stop stop-color="#9CECFB"></stop>
			<stop offset="0.5" stop-color="#65C7F7" stop-opacity="0.9"
			></stop>
			<stop offset="1" stop-color="#0052D4" stop-opacity="0.8"
			></stop>
		</linearGradient>
	</defs>
</svg>
